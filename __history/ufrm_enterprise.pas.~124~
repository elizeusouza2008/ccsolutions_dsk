implementation

{$R *.dfm}

uses ufrm_dm;

procedure Tfrm_enterprise.ACBrCEP1BuscaEfetuada(Sender: TObject);
begin
  inherited;
  cepObj := TZipcode.Create(Self);
  cepObj.zipcode(ACBrCEP1, dbtxtedt_address.Text, dbtxtedt_street.Text,
    dbtxtedt_city.Text, dbtxtedt_state.Text, dbtxtedt_complement.Text);
end;

procedure Tfrm_enterprise.Action_delete_imageExecute(Sender: TObject);
begin
  inherited;
  ds.DataSet.FieldByName('ent_image').Value := Null;
end;

procedure Tfrm_enterprise.Action_insert_imageExecute(Sender: TObject);
begin
  inherited;
  imgObj := TCompress_image.Create;
  imgObj.imgCompress(DBImage1, OpenPictureDialog1);
end;

procedure Tfrm_enterprise.cxDBButtonEdit2PropertiesButtonClick(Sender: TObject;
  AButtonIndex: Integer);
begin
  inherited;
  cepObj := TZipcode.Create(Self);
  cepObj.conZipcode(ACBrCEP1, dbbtnedt_cep.Text);
end;

procedure Tfrm_enterprise.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  inherited;
  frm_enterprise.Destroy;
  frm_enterprise := Nil;
end;

procedure Tfrm_enterprise.qryAfterInsert(DataSet: TDataSet);
begin
  inherited;
  qryent_dt_registration.Value := Date + Time;
end;

end.
